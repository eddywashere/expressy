// base styles only

body
  font: 100%/1.5 $fonts
  -webkit-font-smoothing: antialiased

a, a:visited {
  text-decoration: none;
  color: $linkColor;
}

a:hover {
  text-decoration: underline;
  color: $linkHover;
}
  
a:focus {
  color: $linkColor; 
  outline: none;
}

p {
  margin: 0 0 $size4;
  small {
    font-size: $size8;
    color: $light;
  }
}

h1, h2, h3, h4, h5, h6 {
  margin: 0 0 $size8;
  color: $darker;
  text-rendering: optimizelegibility;
  small {
    font-family: $fonts;
    font-weight: normal;
    color: $dark;
  }
}

h1 {
  font-size: $size1
  small {
    font-size: $size3;
    line-height: 1;
    display:block;
  }
}
h2 {
  font-size: $size2;
  //  border-bottom: 1px solid #CCC;
  small {
    font-size: 22px;
  }
}
h3 {
  font-size: $size3;
  color: $dark;
  small {
    font-size: 16px;
  }
}
h4, h5, h6 {

}
h4 {
  font-size: $size4;
  small {
    font-size: 12px;
  }
}
h5 {
  font-size: $size5;
}
h6 {
  font-size: $size6;
  color: $light;
  text-transform: uppercase;
}


// LISTS
// -----

// Unordered and Ordered lists

ul ul,
ul ol,
ol ol,
ol ul {
  margin-bottom: 0;
}
ul {
  list-style: disc;
  padding: 0;
  margin: 0 0 $size8 $size4;
}
ol {
  list-style: decimal;
  padding: 0;
  margin: 0 0 $size8 $size3;
}
li {
  line-height: $baseLineHeight;
}

// Description Lists
dl {
  margin-bottom: $size8;
  font-size:$baseFontSize;
}
dt,
dd {
  line-height: $baseLineHeight;
}
dt {
  font-weight: bold;
}
dd {
  margin-left: $size4;
  font-size: $size7;
}

// MISC
// ----

// Horizontal rules
hr {
  seam()
  margin: $baseLineHeight 0;
}

// Emphasis
strong {
  font-weight: 400;
}
em {
  font-style: italic;
}

// Abbreviations and acronyms
abbr {
  font-size: 90%;
  text-transform: uppercase;
  border-bottom: 1px dotted #ddd;
  cursor: help;
}

// Blockquotes

blockquote {
  padding: 0 0 0 $size4;
  margin: 0 0 $size4;
  border-left: 5px solid $lighter;
  color: $lighter;
  p {
    margin-bottom: 0;
    span {
      color: $light;
      font-style: italic;
    }
  }
  small {
    display: block;
    line-height: $baseLineHeight;
    color: $light;
    &:before {
      content: '\2014 \00A0';
    }
  }
}